#Basic settings
set ignorecase true
set icons true
set drawbox true
set hidden true

#custom commands
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# cmd setwallpaper $f feh --bg-fill --no-febg "$f"
# Remove some defaults
map m
map o
map e
#custom remaps
map md mkdir
map mf mkfile
map <enter> open
